<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="3dp">
        <io.straas.android.sdk.demo.common.widget.RecordTextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatroom_rest_host"
            android:tag="chatroom_rest_host"
            android:hint="Chatroom restful API server host"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <io.straas.android.sdk.demo.common.widget.RecordTextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatroom_socket_host"
            android:tag="chatroom_socket_host"
            android:hint="Chatroom socket server host"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <io.straas.android.sdk.demo.common.widget.RecordTextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatroom_cms_host"
            android:tag="chatroom_cms_host"
            android:hint="Chatroom CMS restful API server host"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messaging SDK demo"
        android:textAllCaps="false"
        android:onClick="startActivity" />

</LinearLayout>
