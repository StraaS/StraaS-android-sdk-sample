<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screencast_overlay_buttons"
    android:layout_width="@dimen/overlay_layout_width"
    android:layout_height="@dimen/overlay_button_size"
    android:layout_gravity="end"
    android:background="#BB1E1E1E"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/screencast_overlay_move"
        android:layout_width="@dimen/overlay_button_size"
        android:layout_height="@dimen/overlay_button_size"
        android:scaleType="centerInside"
        android:src="@drawable/ic_fullscreen_white_24dp"
        android:contentDescription="clear" />

    <ImageView
        android:id="@+id/screencast_overlay_finish"
        android:layout_width="@dimen/overlay_button_size"
        android:layout_height="@dimen/overlay_button_size"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete_forever_white_24dp"
        android:contentDescription="clear" />

    <ImageView
        android:id="@+id/screencast_overlay_start"
        android:layout_width="@dimen/overlay_button_size"
        android:layout_height="@dimen/overlay_button_size"
        android:scaleType="centerInside"
        android:src="@drawable/ic_screen_share"
        android:contentDescription="clear" />

    <FrameLayout
        android:layout_width="@dimen/overlay_button_size"
        android:layout_height="@dimen/overlay_button_size" >

        <ProgressBar
            android:id="@+id/screencast_overlay_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_gravity="center"
            android:visibility="gone"
            android:contentDescription="clear" />

        <TextView
            android:id="@+id/screencast_overlay_elapsed_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:contentDescription="clear" />
    </FrameLayout>

    <TextureView
        android:id="@+id/screencast_overlay_preview"
        android:visibility="gone"
        android:layout_width="20dp"
        android:layout_height="20dp"/>
</LinearLayout>
